{% extends "base.html.twig" %}

{% block carousell %}
    <header>
        <title>Blanco banco Page Photographie</title>
        <!-- carouselle principal-->
        <div id="boite-carouselle-menu" class="container-fluid">
            <div
                    id="Carouselle-Menu"
                    class="carousel slide row"
                    data-ride="carousel">
                <div>
                    <!-- action du carouselle -->
                    <ol class="carousel-indicators">
                        <li
